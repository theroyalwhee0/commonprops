{
  "name": "@theroyalwhee0/commonprops",
  "version": "1.0.0",
  "description": "TypeScript utilities for extracting common properties from sets of types.",
  "main": "src/index.ts",
  "keywords": [],
  "author": "Adam Mill <hismajesty@theroyalwhee.com> (https://www.theroyalwhee.com/)",
  "license": "Apache-2.0",
  "type": "module",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "chai": "^5.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.8.3"
  },
  "config": {
    "node_options": "--disable-warning=ExperimentalWarning --experimental-strip-types"
  },
  "scripts": {
    "lint": "npm run -s lint:ts && npm run -s lint:eslint",
    "lint:fix": "npm run -s lint:ts && npm run -s lint:eslint:fix",
    "lint:ts": "tsc --noEmit",
    "lint:eslint": "eslint 'src/**/*.ts' --max-warnings=20",
    "lint:eslint:fix": "eslint 'src/**/*.ts' --max-warnings=20 --fix",
    "test": "NODE_OPTIONS=\"$npm_package_config_node_options\" node --test --test-timeout=3000 'tests/**/*.test.ts'",
    "test:quiet": "NODE_OPTIONS=\"$npm_package_config_node_options\" node --test --test-reporter=dot --test-timeout=3000 'tests/**/*.test.ts'",
    "docs": "typedoc"
  }
}